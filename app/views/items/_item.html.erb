<div id="<%= dom_id item %>">
  <p>
    <strong>Name:</strong>
    <%= item.name %>
  </p>

  <p>
    <strong>Description:</strong>
    <%= item.description %>
  </p>

  <p>
    <strong>Amount:</strong>
    <%= item.amount %>
  </p>

  <p>
  <strong>Locations:</strong>
  <% for location in item.locations  %>
  <%= location.name %><br />
<% end %>
</p>

</div>
